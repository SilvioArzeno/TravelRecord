<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TravelRecord"
             x:Class="TravelRecord.LoginPage"
             Style="{StaticResource NavigationStyle}">

    <StackLayout VerticalOptions="Center">
        <!-- Login Page UI -->
        <Label x:Name ="LoginLabel"
               Style ="{StaticResource TitleStyle}"
               Text= "Travel App!"/>
        <Label x:Name="ErrorLabel"
               Style="{StaticResource ErrorStyle}"/>
        <Entry x:Name="UserEntry"
               Placeholder="UserName"/>
        <Entry x:Name="PasswordEntry"
               Placeholder="Password"
               IsPassword="True"/>
        <Button x:Name="LoginButton"
                Text="Login"
                Clicked="LoginButton_Clicked"/>
        <Button x:Name="ForgotButton"
                IsVisible="False"
                Text="Forgot my password!"
                BackgroundColor="Transparent"
                VerticalOptions="EndAndExpand"
                FontSize="Micro"
                Clicked="ForgotButton_Clicked"/>
    </StackLayout>
</ContentPage>
